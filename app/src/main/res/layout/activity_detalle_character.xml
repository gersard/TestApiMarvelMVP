<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="cl.assertsoft.testapimarvelmvp.view.DetalleCharacterActivity">

    <ImageView
        android:id="@+id/image_character_detail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorAccent" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTextWhite"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txt_character_name_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="20"
                android:text="Spider Man" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
